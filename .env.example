# Environment Variables for KOSP Backend
# Copy this file to .env.local and fill in your actual values

# Encryption
ENCRYPTION_PASSWORD=your_base64_encryption_password_here
ENCRYPTION_SALT=your_encryption_salt_hex_here

# AWS Configuration
AWS_ACCESS_KEY=your_aws_access_key_here
AWS_SECRET_KEY=your_aws_secret_key_here
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=your_s3_bucket_name
AWS_S3_CUSTOM_DOMAIN=https://your.cdn.domain.here/

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_minimum_64_characters_for_hs512_algorithm

# (ms) = 10 mins
JWT_EXPIRATION_ACCESS=600000

# (ms) = 30 days
JWT_EXPIRATION_REFRESH=2592000000

# (ms) = 30 mins
JWT_EXPIRATION_SIGNUP=1800000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kosp
DB_USERNAME=postgres
DB_PASSWORD=your_db_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=kosp
MONGODB_AUTHENTICATION_DATABASE=admin
MONGODB_USERNAME=your_mongodb_username_here
MONGODB_PASSWORD=your_mongodb_password_here

# RabbitMQ
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your_rabbitmq_password_here
RABBITMQ_AMQP_PORT=5672
RABBITMQ_MGMT_PORT=15672

# OAuth2 - GitHub
GITHUB_CLIENT_ID=your_github_oauth_client_id_here
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret_here

# GitHub API (for data collection test)
GITHUB_API_TOKEN=your_github_personal_access_token_here
